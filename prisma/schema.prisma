generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id                 Int           @id @default(autoincrement())
  vehicleId          Int
  customerId         Int
  startDate          DateTime
  endDate            DateTime
  dailyRateApplied   Int
  totalDays          Int
  subtotal           Int
  taxAmount          Int
  totalAmount        Int
  depositAmount      Int
  status             EstadoReserva @default(PENDIENTE)
  paymentStatus      EstadoPago    @default(PENDIENTE)
  paymentMethod      MetodoPago?
  pickupLocation     String
  dropoffLocation    String
  specialRequests    String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  cancelledAt        DateTime?
  cancellationReason String?
  Customer           Customer      @relation(fields: [customerId], references: [id])
  Vehicle            Vehicle       @relation(fields: [vehicleId], references: [id])

  @@index([customerId])
  @@index([startDate, endDate])
  @@index([status])
  @@index([vehicleId])
}

model Customer {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String    @unique
  phone         String
  dpi           String    @unique
  licenseNumber String
  licenseExpiry DateTime
  address       String?
  city          String?
  department    String?
  country       String    @default("Guatemala")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isBlacklisted Boolean   @default(false)
  Booking       Booking[]

  @@index([dpi])
  @@index([email])
}

model Vehicle {
  id                Int               @id @default(autoincrement())
  plateNumber       String            @unique
  brand             String
  model             String
  year              Int
  category          CategoriaVehiculo
  dailyRate1_2      Int
  dailyRate3_6      Int
  weeklyRate        Int
  monthlyRate       Int
  status            EstadoVehiculo    @default(DISPONIBLE)
  transmission      Transmision
  fuelType          TipoCombustible
  passengerCapacity Int
  hasAC             Boolean           @default(true)
  hasGPS            Boolean           @default(false)
  imageUrl          String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  Booking           Booking[]

  @@index([category])
  @@index([status])
}

enum CategoriaVehiculo {
  ECONOMICO
  SUV
  LUJO
  VAN
}

enum EstadoPago {
  PENDIENTE
  PARCIAL
  PAGADO
  REEMBOLSADO
}

enum EstadoReserva {
  PENDIENTE
  CONFIRMADO
  ACTIVO
  COMPLETADO
  CANCELADO
}

enum EstadoVehiculo {
  DISPONIBLE
  RENTADO
  MANTENIMIENTO
  RETIRADO
}

enum MetodoPago {
  EFECTIVO
  TARJETA
  TRANSFERENCIA
}

enum TipoCombustible {
  GASOLINA
  DIESEL
  HIBRIDO
  ELECTRICO
}

enum Transmision {
  MANUAL
  AUTOMATICA
}
